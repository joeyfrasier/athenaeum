# Docker Compose Environment Variables
# Copy this to .env before running docker-compose up

# PostgreSQL/TimescaleDB
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_USER=tsdbadmin
POSTGRES_DB=tsdb

# pgAdmin (optional)
PGADMIN_EMAIL=admin@athenaeum.local
PGADMIN_PASSWORD=admin

# Athenaeum Application
DATABASE_URL=postgresql://tsdbadmin:your-secure-password-here@localhost:5432/tsdb
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7
MAX_CONVERSATION_HISTORY=50
WORKER_POOL_SIZE=5
COMPANY_NAME=Your Company
